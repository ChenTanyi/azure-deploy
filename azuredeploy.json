{
    "parameters": {
        "iotHubName": {
            "type": "string"
        },
        "iotHubSku": {
            "type": "string",
            "allowedValues": [
                "F1 - only one per subscription",
                "S1 - $50 / units",
                "S2 - $500 / units"
            ],
            "defaultValue": "F1 - only one per subscription"
        },
        "iotHubUnits": {
            "type": "int",
            "minValue": 1,
            "defaultValue": 1
        },
        "iotHubPartitions": {
            "type": "int",
            "minValue": 2,
            "maxValue": 32,
            "defaultValue": 2
        },
        "sendGridApiKey": {
            "type": "string"
        },
        "toEmail": {
            "type": "string"
        },
        "fromEmail": {
            "type": "string"
        },
        "repoUrl": {
            "type": "string",
            "defaultValue": "https://github.com/ChenTanyi/azure-deploy.git"
        }
    },
    "variables": {
        "functionName": "[concat('function', uniquestring(resourceGroup().id))]",
        "storageName": "[concat('storage', uniquestring(resourceGroup().id))]",
        "eventHubConnectionString": "[concat('Endpoint=',reference(resourceId('Microsoft.Devices/IoTHubs',parameters('iothubName'))).eventHubEndpoints.events.endpoint,';SharedAccessKeyName=iothubowner;SharedAccessKey=',listKeys(resourceId('Microsoft.Devices/IotHubs',parameters('iothubName')), '2017-01-19').value[0].primaryKey)]"
    },
    "resources": [
        {
            "apiVersion": "2017-01-19",
            "type": "Microsoft.Devices/IotHubs",
            "name": "[parameters('iotHubName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "eventHubEndpoints": {
                    "events": {
                        "retentionTimeInDays": 1,
                        "partitionCount": "[parameters('iotHubPartitions')]"
                    }
                },
                "features": "None"
            },
            "sku": {
                "name": "[first(split(parameters('iotHubSku'), ' '))]",
                "capacity": "[parameters('iotHubUnits')]"
            }
        }
    ],
    "outputs": {
        "value": {
            "type": "object",
            "value": "[listKeys(resourceId('Microsoft.Devices/IotHubs', parameters('iotHubName')), '2017-01-19')]"
        },
        "Endpoints": {
            "type": "string",
            "value": "[variable('eventHubConnectionString')]"
        }
    },
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0"
}