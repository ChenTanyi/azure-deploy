{
    "parameters": {
        "iotHubName": {
            "type": "string"
        },
        "iotHubSku": {
            "type": "string",
            "allowedValues": [
                "F1 - only one per subscription",
                "S1 - $50 / units",
                "S2 - $500 / units"
            ],
            "defaultValue": "F1 - only one per subscription"
        },
        "iotHubUnits": {
            "type": "int",
            "minValue": 1,
            "defaultValue": 1
        },
        "iotHubPartitions": {
            "type": "int",
            "minValue": 2,
            "maxValue": 32,
            "defaultValue": 2
        },
        "sendGridApiKey": {
            "type": "string"
        },
        "toEmail": {
            "type": "string"
        },
        "fromEmail": {
            "type": "string"
        }
    },
    "variables": {
        "functionName": "[concat('function', uniquestring(resourceGroup().id))]",
        "storageName": "[concat('storage', uniquestring(resourceGroup().id))]"
    },
    "resources": [
        {
            "apiVersion": "2016-03-01",
            "name": "[variables('functionName')]",
            "type": "Microsoft.Web/sites",
            "properties": {
                "name": "[variables('functionName')]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "AzureWebJobsDashboard",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('storageName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageName')), '2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('storageName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageName')), '2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~1"
                        },
                        {
                            "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('storageName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageName')), '2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTSHARE",
                            "value": "[concat(toLower(variables('functionName')), '8cb7')]"
                        },
                        {
                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                            "value": "6.5.0"
                        },
                        {
                            "name": "mySendGridKey",
                            "value": "[parameters('sendGridApiKey')]"
                        },
                        {
                            "name": "eventHubConnectionPath",
                            "value": "[concat(parameters('iotHubName'), '-', uniquestring(resourceGroup().id))]"
                        }
                    ]
                },
                "clientAffinityEnabled": false
            },
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', variables('storageName'))]",
                "[resourceId('Microsoft.Devices/IotHubs', parameters('iotHubName'))]"
            ],
            "location": "[resourceGroup().location]",
            "kind": "functionapp",
            "resources": [
                {
                    "apiVersion": "2015-08-01",
                    "name": "DoorMonitor",
                    "type": "functions",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', variables('functionName'))]",
                        "[resourceId('Microsoft.Devices/IotHubs', parameters('iotHubName'))]"
                    ],
                    "properties": {
                        "config": {
                            "bindings": [
                                {
                                "type": "eventHubTrigger",
                                "name": "eventHubMessages",
                                "direction": "in",
                                "path": "%eventHubConnectionPath%",
                                "connection": "eventHubConnectionString"
                                },
                                {
                                "name": "$return",
                                "type": "sendGrid",
                                "direction": "out",
                                "apiKey": "mySendGridKey",
                                "to": "[parameters('toEmail')]",
                                "from": "[parameters('fromEmail')]",
                                "subject": "Door Status Changed"
                                }
                            ],
                            "disabled": false
                        },
                        "files": {
                            "index.js": "module.exports = function (context, eventHubMessages) {\r\n    context.log(eventHubMessages);\r\n\r\n    var message = {\r\n        // could use temporary settings in the comment below and uncomment it\r\n        /*\"personalizations\": [\r\n            {\r\n            \"to\": [\r\n                {\r\n                \"email\": \"<temporary toEmail>\"\r\n                }\r\n            ],\r\n            \"subject\": \"<temporary subject>\"\r\n            }\r\n        ],\r\n        \"from\": {\r\n            \"email\": \"<temporary fromEmail>\"\r\n        },*/\r\n        \"content\": [\r\n            {\r\n            \"type\": \"text/plain\",\r\n            \"value\": eventHubMessages\r\n            }\r\n        ]\r\n    };\r\n\r\n    context.done(null, message);\r\n};\r\n"
                        }
                    }
                }
            ]
        },
        {
            "apiVersion": "2015-05-01-preview",
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storageName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "accountType": "Standard_LRS"
            }
        },
        {
            "apiVersion": "2017-01-19",
            "type": "Microsoft.Devices/IotHubs",
            "name": "[parameters('iotHubName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "eventHubEndpoints": {
                    "events": {
                        "retentionTimeInDays": 1,
                        "partitionCount": "[parameters('iotHubPartitions')]"
                    }
                },
                "features": "None"
            },
            "sku": {
                "name": "[first(split(parameters('iotHubSku'), ' '))]",
                "capacity": "[parameters('iotHubUnits')]"
            }
        }
    ],
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0"
}